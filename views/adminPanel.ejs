<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Profile</title>

    <link rel="stylesheet" href="/stylesheets/navBar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <link rel="stylesheet" href="/stylesheets/profile.css">

</head>

<body>

    <%- include('adminNavBar') %>

    <div class="container1">
        <aside class="sidebar">
            <nav>
                <ul>
                    <li><a href="/admin/add-product">Add Product</a></li>
                    <li><a href="/admin/show-product">Show Product</a></li>
                </ul>
            </nav>
        </aside>

        <main class="main-content">
            <section class="user-info">
                <h2>Admin Panel</h2>
                <div class="info-card">
                    <img src="/image/cart-image.jpg" alt="Profile Picture" class="profile-pic">
                    <div class="info-details">
                        <p><strong>Name:</strong>
                            <%= admin.username %>
                        </p>
                        <p><strong>Email:</strong>
                            <%= admin.email %>
                        </p>
                        <p><strong>Phone:</strong> (123) 456-7890</p>
                    </div>
                    <!-- <button class="update-btn">Update Information</button> -->
                </div>
            </section>

            <section class="buttons">
                <a href="/operation/logout" class="logout-btn">Logout</a>
            </section>
        </main>
    </div>
</body>

</html>